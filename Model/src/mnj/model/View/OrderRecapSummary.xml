    Name="param"
    Kind="where"
    Type="oracle.jbo.domain.Number"/>
  <SQLQuery>
    <![CDATA[SELECT MOBQ.production_unit,
       MOBQ.Buyer_id,
       MOBQ.org_id,
       MOBQ.CUSTOMER_NAME,
       NVL (MOBQ.REPLACE_BPO, MOBQ.BPO_NUMBER) BPO_NUMBER,
       MOBQ.STYLE,
       MOBQ.SEASON,
       --MOBQ.COLOUR,--Commented by Mr. Sakibul Islam, requirement of Mr. Wasi Uddin on 24.Mar.2020, for Replacing Color with Finish Goods Color by condition
       /*Case Statement Added by Mr. Sakibul Islam, requirement of Mr. Wasi Uddin on 24.Mar.2020, for Replacing Color with Finish Goods Color by condition*/
       CASE
          WHEN Finish_Goods_color IS NULL OR Finish_Goods_color = 'No entry'
          THEN
             TRIM (
                (SELECT FFV.DESCRIPTION
                   FROM FND_FLEX_VALUES_VL FFV
                  WHERE     FFV.FLEX_VALUE = msib.segment4
                        AND FFV.FLEX_VALUE_SET_ID = 1014895
                        AND FFV.ENABLED_FLAG = 'Y'
                        AND ROWNUM = 1                   -- added on 27 nov 19
                                      ))
          ELSE
             Finish_Goods_color
       END
          COLOUR,
       MOBQ.WASH_NAME,
       MOBQ.BPO_QTY,
       MOBQ.UNIT_SELLING_PRICE,
       MOBQ.INVENTORY_ITEM_ID,
       MOBQ.DELIVERY_DATE
  FROM MJ_ORDER_BALANCE_QTY MOBQ, mtl_system_items msib
 WHERE     1 = :param
       AND MOBQ.BPO_QTY <> 0
       AND MOBQ.INVENTORY_ITEM_ID = msib.INVENTORY_ITEM_ID
       AND MOBQ.ORG_ID = (SELECT OPERATING_UNIT
                            FROM org_organization_definitions ood
                           WHERE ood.ORGANIZATION_ID = msib.ORGANIZATION_ID)]]>
  </SQLQuery>
